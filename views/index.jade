extends layout

block content
    for album in albums
        h2
            div(class="btn-group pull-right btn-group-album-options")
              i(class="icon-gear dropdown-toggle", data-toggle="dropdown")
              ul(class="dropdown-menu")
                li
                    a(href="/upload/#{album.id}") Add to this Album
            | #{album.name}
            small.muted(style="padding-left: 10px") #{album.date}
        div
            if album.photos
                for photo in album.photos
                    img(
                        src="#{placeholderImg}",
                        data-src="#{photoHelper.getThumbnailUrl(album.id, photo.name)}",
                        data-img="#{photoHelper.getDisplayUrl(album.id, photo.name)}",
                        data-img-original="#{photoHelper.getOriginalUrl(album.id, photo.name, photo.ext)}",
                        class="img-thumbnail"
                    )


